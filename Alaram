module alarm {
  namespace "http://example.com/alarm";
  prefix alarm;
  
  import ietf-alarm { prefix ialm; }

  notification alarm-event {
    description "Custom Alarm Notification";

    leaf alarm-id {
      type string;
      description "Unique alarm identifier";
    }
    leaf severity {
      type enumeration {
        enum critical;
        enum major;
        enum minor;
        enum warning;
        enum cleared;
      }
      description "Alarm severity level";
    }
    leaf text {
      type string;
      description "Alarm description";
    }
    leaf timestamp {
      type string;
      description "Time when the alarm was generated";
    }
    leaf source {
      type string;
      description "Source of the alarm (e.g., device ID, system name)";
    }
    leaf category {
      type enumeration {
        enum hardware;
        enum software;
        enum network;
        enum security;
      }
      description "Category of the alarm";
    }
  }
}
